pipeline {
agent any

 stages {

        stage('VAR') {
            steps { 
             git branch: 'main', url: 'https://github.com/zhvakinde/jenkins' 
             script {
             env.Commit = sh(script: 'git rev-parse HEAD', returnStdout: true)?.trim()
             env.TAG_NAME= sh(script: "git describe --tags ${Commit} --abbrev=0", returnStdout: true)
}
           echo env.TAG_NAME
}
}
        stage('Deploy') {
           steps {
           echo env.TAG_NAME
           }
           }
}

}
